extends layout.jade

block content
    section.pure-g.logos
        .pure-u-1.pure-u-sm-1-2
            .img-block: img(src="logo-color.png", alt="NTU HSA Tutorial Day")
        .pure-u-1.pure-u-sm-1-2
            .img-block: img(src="logo-time.png", alt="Time")
        //- .pure-u-1-2: .event-date
            .year 2015
            span.month March
            span.date 06
            .place NTU
    section#intro
        h2 歡迎參加 HSA Tutorial Day 活動！
        h4 國立台灣大學資訊工程學系 徐慰中、洪士灝敬邀
        +intro(p2)
    hr
    section#about
        h2 Welcome to HSA Tutorial Day!
        h4
            | Wei-Chung Hsu and Shih-Hao Hung
            br
            | Department of Computer Science and Information Engineering
            br
            | National Taiwan University
        +intro(p1)
    hr
    section#sponsors
        h2 Sponsors 特別感謝
        .sponsors.pure-g
            each sponsor in sponsors
                .sponsor.pure-u-1.pure-u-sm-1-2.pure-u-md-1-3
                    if sponsor.logo
                        .img-block: img(src=sponsor.logo, title=sponsor.full, alt=sponsor.name)
                    if sponsor.url
                        h4: a(href=sponsor.url, target="_blank")= sponsor.full
                    else
                        p= sponsor.full

block bottom
    section#map.map-info
        .container
            h2 &dash;&nbsp;活動地點&nbsp;&dash;
            p
                | 國立臺灣大學 National Taiwan University
                br
                | 10617 臺北市羅斯福路四段一號 博理館2樓201
        iframe(src=mapLink)
