extends layout.jade

block content
    h1 Sessions 議程 - 台北場
    p
        | 日期：2015, 7/27 ~ 7/28
        br
        | 地點：台灣大學德田館102室
        br
        a(href="/SDN2015Workshop/SDN_info/講者資訊.pdf", target="_blank") PDF完整資訊下載
    .session-table
        table.pure-table.pure-table-horizontal
            thead: tr
                th.th-time Time
                th.th-title Title
                th.th-speaker Speaker
            tbody
                each s, index in sessions
                    if s.speaker
                        tr(id="sess-" + index)
                            td= s.time
                            td
                                | #{s.title}
                                if s.t_detailed
                                    each t_d in s.t_detailed
                                        br
                                        | #{t_d}
                                if s.file
                                    p
                                        a(href="/SDN2015Workshop/SDN_info/" + s.file, target="_blank") 檔案下載
                                if s.intro
                                    | &nbsp;
                                    a.toggle(href="javascript:void(0);", onclick="t(" + index + ");")
                                        span &dtrif;
                                    .session-intro
                                        +intro(s.intro)
                            td= s.speaker
                    else
                        tr.one-column
                            td= s.time
                            td= s.title
                            td

block bottom
    section#map.map-info
        .container
            h2 &dash;&nbsp;活動地點&nbsp;&dash;
            p
                | 7/27-28 台北場 - 台灣大學資訊工程學系
                br
                | 10617 臺北市羅斯福路四段一號 德田館
        iframe(src=mapLink)
    script(type="text/javascript").
        window.t = function (a) {
            var e = document.getElementById('sess-' + a),
                n = 'show-intro';
            if (e.classList) {
                e.classList.toggle(n);
            } else {
                var c = e.className.split(' '),
                    i = c.indexOf(n);
                if (i >= 0) c.splice(i, 1);
                else c.push(n);
                e.className = c.join(' ');
            }
        };

