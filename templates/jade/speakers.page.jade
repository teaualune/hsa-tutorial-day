mixin speakerInfo(speaker)
    h3= speaker.name
    if speaker.website
        .speaker-website: a(href=speaker.website.url, target="_blank")= speaker.website.name
    p= speaker.intro

extends layout.jade

block content
    h1 Speakers è¬›è€…
